# Kraft Application Environment Variables
# Copy this file to .env and fill in your actual values

# ========================================
# Database Configuration (MariaDB)
# ========================================
MARIADB_ROOT_PASSWORD=your-secure-root-password
MARIADB_DATABASE=kraft_db
MARIADB_USER=kraft_user
MARIADB_PASSWORD=your-secure-db-password

# Database Connection (for Spring Boot)
DB_HOST=localhost
DB_PORT=3306
DB_NAME=kraft_db
DB_USER=kraft_user
DB_PASSWORD=your-secure-db-password

# ========================================
# Redis Configuration
# ========================================
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# ========================================
# MinIO Configuration
# ========================================
MINIO_ROOT_USER=kraft_minio
MINIO_ROOT_PASSWORD=your-secure-minio-password
MINIO_REGION=us-east-1
MINIO_ENDPOINT=http://localhost:9000

# ========================================
# OAuth2 - Google
# ========================================
GOOGLE_CLIENT_ID=your-google-client-id.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=your-google-client-secret

# ========================================
# OAuth2 - Naver
# ========================================
NAVER_CLIENT_ID=your-naver-client-id
NAVER_CLIENT_SECRET=your-naver-client-secret

# ========================================
# Application Configuration
# ========================================
SPRING_PROFILES_ACTIVE=dev
SERVER_PORT=8080

# ========================================
# GitHub Container Registry (for CD)
# ========================================
GITHUB_REPOSITORY=your-username/kraft

# ========================================
# Production Server (for CD)
# ========================================
SERVER_HOST=your-server-ip
SERVER_USER=deploy
SERVER_PORT=22

